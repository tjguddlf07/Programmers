class Solution {
public int[] solution(long n) {
    int length = Long.toString(n).length();
    int[] answer = new int[length];
    
    for (int i = 0; i < length; i++) {
        answer[i] = (int) (n % 10); //12345%10=5, 1234%10=4, ..
        n /= 10; // 12345/10=1234, 1234/10=123, .. 
    } 
    return answer;
  }
}
